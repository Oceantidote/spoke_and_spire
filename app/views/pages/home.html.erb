<% if @banner.present? %>
  <header>
    <div id="carouselExampleIndicators" class="carousel rel slide carousel-fade" data-ride="carousel" data-pause="false">
      <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
      </ol>
      <div class="carousel-inner" role="listbox">
        <!-- Slide One - Set the background image for this slide in the line below -->
        <div class="carousel-item active" style="background-image: url('<%= url_for @banner.slide_one.photo %>')">
          <div class="carousel-caption bottom-30 d-md-block">
            <h2 class="display-4"><%= @banner.slide_one_title %></h2>
          </div>
        </div>
        <!-- Slide Two - Set the background image for this slide in the line below -->
        <div class="carousel-item" style="background-image: url('<%= url_for @banner.slide_two.photo %>')">
          <div class="carousel-caption bottom-30 d-md-block">
            <h2 class="display-4"><%= @banner.slide_two_title %></h2>
          </div>
        </div>
        <!-- Slide Three - Set the background image for this slide in the line below -->
        <div class="carousel-item" style="background-image: url('<%= url_for @banner.slide_three.photo %>')">
          <div class="carousel-caption bottom-30 d-md-block">
            <h2 class="display-4"><%= @banner.slide_three_title %></h2>
          </div>
        </div>
        <div class="carousel-item" style="background-image: url('<%= url_for @banner.slide_four.photo %>')">
          <div class="carousel-caption bottom-30 d-md-block">
            <h2 class="display-4"><%= @banner.slide_four_title %></h2>
          </div>
        </div>
      </div>
      <%= image_tag "the-spire-and-spoke-logo-white-and-trans.png", alt: "The Spire and Spoke", class: "mid-logo" %>
    </div>
  </header>
